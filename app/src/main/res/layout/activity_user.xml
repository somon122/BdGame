<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2196F3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">



    <TextView
        android:id="@+id/text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="User Details"
        android:textColor="#FDFCFC"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/username_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_design"
        android:drawableLeft="@drawable/account_circle"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColor="#090808"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_id"

        />

    <TextView
        android:id="@+id/userNumber_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#070707"
        android:hint="Phone Number"
        android:paddingLeft="60dp"
        android:textSize="17sp"
        android:gravity="center_vertical"
        android:background="@drawable/edit_text_design"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_id"

        />

    <EditText
                android:id="@+id/password_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:drawableLeft="@drawable/lock_open_black_24dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="#050505"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userNumber_id"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/confirmPassword2_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_design"
                android:drawableLeft="@drawable/lock_open_black_24dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:textColor="#050505"
                android:hint="Enter confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_id"
                tools:layout_editor_absoluteY="79dp" />

    <CheckBox
        android:id="@+id/condition_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/home_button_design"
        android:text="Accept terms and conditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword2_id" />


    <Button
        android:id="@+id/signUpButton_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_design"
        android:text="Submit Details"
        android:onClick="Submit"
        android:textAllCaps="false"
        android:textColor="#050505"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/condition_id" />





        </androidx.constraintlayout.widget.ConstraintLayout>